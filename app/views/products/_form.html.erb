<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :permalink %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.label "File" %><br />
    <%= f.file_field :file %>
    <%= f.hidden_field :user, value: current_user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
